<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription,UnusedAttribute,
    UseCompoundDrawables,RtlSymmetry,RelativeOverlap">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        tools:context=".ui.doctor.OrderConfirmation">

        <ScrollView
            android:id="@+id/llMainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_50sdp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#EFF3FF"
                    android:gravity="center"
                    android:padding="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/tvheading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivOrder"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:letterSpacing="0.03"
                        android:text="@string/booking_received_successfully"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_18ssp" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvheading"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_1sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:text="Thankyou for shairing your details with us"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tvDescription2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDescription"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_1sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="One of our care manager will call you and guide you further"
                        android:textColor="@color/lightBlack"
                        android:textSize="@dimen/_11ssp" />

                    <ImageView
                        android:id="@+id/ivOrder"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/confirm_appointment" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/round_transparent"
                        android:elevation="@dimen/_2sdp"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/phone"
                        app:tint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/iv1"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_1sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:text="Within 2-3 hours"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tv11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv1"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/iv1"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_1sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="You will get a call from a care manager"
                        android:textColor="@color/lightBlack"
                        android:textSize="@dimen/_11ssp" />

                    <View
                        android:id="@+id/v1"
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_below="@+id/iv1"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:background="@color/color_cccccc" />

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_below="@+id/v1"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/round_transparent"
                        android:elevation="@dimen/_2sdp"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/clock"
                        app:tint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v1"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/iv2"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_1sdp"
                        android:text="Within 24 hours"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv2"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/iv2"
                        android:fontFamily="@font/roboto_regular"
                        android:lineSpacingExtra="@dimen/_1sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="We confirm your appointment with the recommended cancer specialist"
                        android:textColor="@color/lightBlack"
                        android:textSize="@dimen/_11ssp" />

                    <View
                        android:id="@+id/v2"
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_below="@+id/iv2"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:background="@color/color_cccccc" />

                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_below="@+id/v2"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/round_transparent"
                        android:elevation="@dimen/_2sdp"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/appointment"
                        app:tint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v2"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/iv3"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_1sdp"
                        android:text="Schedule Appointmnet"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv3"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/iv3"
                        android:fontFamily="@font/roboto_regular"
                        android:lineSpacingExtra="@dimen/_1sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="Meet the specialist to begin your treatment"
                        android:textColor="@color/lightBlack"
                        android:textSize="@dimen/_11ssp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llAppointmentSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/back_white"
                    android:elevation="@dimen/_2sdp"
                    android:padding="@dimen/_8sdp"
                    android:visibility="gone"
                    tools:ignore="UnusedAttribute">

                    <TextView
                        android:id="@+id/tvPatientName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toStartOf="@+id/doc_fees"
                        android:fontFamily="@font/roboto_bold"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:id="@+id/doc_fees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/Rs"
                        android:textColor="@color/dark_green"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tvAppointmentId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvPatientName"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/lightBlack"
                        android:textSize="@dimen/_11ssp" />


                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvAppointmentId"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/tvDateAppointment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/date"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text=""
                        android:textColor="@color/darkGray"
                        android:textSize="@dimen/_11ssp" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_below="@+id/tvAppointmentId"
                        android:layout_margin="@dimen/_15sdp"
                        android:layout_toEndOf="@+id/tvDateAppointment"
                        android:background="@color/color_cccccc" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvAppointmentId"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/view"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/time"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/tvTimeAppointment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/date"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/view"
                        android:fontFamily="@font/roboto_regular"
                        android:text=""
                        android:textColor="@color/darkGray"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/btnAppointmentDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTimeAppointment"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:background="@drawable/button_second_main"
                        android:elevation="@dimen/_2sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:text="@string/view_details"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10ssp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/border_gray"
                    android:padding="@dimen/_8sdp"
                    tools:ignore="UnusedAttribute">

                    <TextView
                        android:id="@+id/tvContactDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/contact_us_for_any_further_assistance"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:id="@+id/llContactDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvContactDetails"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".48"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_13sdp"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:src="@drawable/phone"
                                app:tint="@color/lightGray" />

                            <TextView
                                android:id="@+id/tvMobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:paddingTop="@dimen/_5sdp"
                                android:text=""
                                android:textColor="@color/lightGray"
                                android:textSize="@dimen/_11ssp" />


                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_weight=".003"
                            android:background="@color/color_cccccc" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_13sdp"
                                android:src="@drawable/email"
                                app:tint="@color/lightGray" />

                            <TextView
                                android:id="@+id/tvEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:paddingTop="@dimen/_5sdp"
                                android:text=""
                                android:textColor="@color/lightGray"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <include
             android:id="@+id/shimmerEffect"
             layout="@layout/shimmer_dummy_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:visibility="gone"
             android:layout_below="@+id/llMainLayout" />

        <TextView
            android:id="@+id/btnGoHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/button_main"
            android:elevation="@dimen/_1sdp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="@string/go_back_home"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12ssp" />
    </RelativeLayout>

</layout>
