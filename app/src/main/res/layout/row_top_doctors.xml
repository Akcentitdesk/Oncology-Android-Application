<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UnusedAttribute,ContentDescription">

    <RelativeLayout
        android:id="@+id/llData"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/multiple_color_background">

        <ImageView
            android:id="@+id/ivdoctor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@color/transparent_" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivdoctor"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:maxWidth="@dimen/_120sdp"
            android:maxLines="1"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="Testing..."
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tvcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:maxWidth="@dimen/_120sdp"
            android:maxLines="1"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="Oncologist"
            android:textColor="@color/lightBlack"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/tvexperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvcategory"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:maxWidth="@dimen/_120sdp"
            android:maxLines="1"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:text="Exp : 3 Years"
            android:textColor="@color/lightBlack"
            android:textSize="@dimen/_10ssp" />
    </RelativeLayout>

</layout>