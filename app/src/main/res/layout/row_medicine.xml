<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/llData"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/back_white"
        android:elevation="@dimen/_2sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivdata"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/border_gray"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/image_placeholder" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivdata"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:maxWidth="@dimen/_90sdp"
            android:maxLines="2"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Test"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="1200"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp" />

        <LinearLayout
            android:id="@+id/llMRP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAmount"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="horizontal"
            tools:ignore="RelativeOverlap">

            <TextView
                android:id="@+id/MRP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/MRP"
                android:textColor="@color/lightGray"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/tvMRP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="@dimen/_2sdp"
                android:text="1200"
                android:textColor="@color/lightGray"
                android:textSize="@dimen/_10ssp"
                tools:ignore="RtlSymmetry" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toEndOf="@+id/tvAmount"
            android:fontFamily="@font/roboto_medium"
            android:gravity="end"
            android:padding="@dimen/_5sdp"
            android:text="12% off"
            android:textColor="@color/dark_green"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/btnGetQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llMRP"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/button_second_main"
            android:elevation="@dimen/_2sdp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:maxLines="2"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Get Quote"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp" />

    </RelativeLayout>

</layout>