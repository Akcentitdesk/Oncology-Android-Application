<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:id="@+id/enter_otp_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/enter_4_digit_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:letterSpacing=".03"
            android:paddingStart="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Enter 4 digit OTP"
            android:textColor="@color/silver"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tvResendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/roboto_regular"
            android:letterSpacing=".03"
            android:padding="@dimen/_5sdp"
            android:text="Resend OTP"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/_10ssp" />

        <LinearLayout
            android:id="@+id/llOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_4_digit_code"
            android:weightSum="4">

            <EditText
                android:id="@+id/etOtp1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/back_gray"
                android:cursorVisible="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/_12sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp"
                tools:ignore="Autofill,LabelFor,UnusedAttribute" />

            <EditText
                android:id="@+id/etOtp2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/back_gray"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/_12sdp"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp"
                tools:ignore="Autofill,LabelFor,UnusedAttribute" />

            <EditText
                android:id="@+id/etOtp3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/back_gray"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/_12sdp"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp"
                tools:ignore="Autofill,LabelFor,UnusedAttribute" />

            <EditText
                android:id="@+id/etOtp4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/back_gray"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/_12sdp"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp"
                tools:ignore="Autofill,LabelFor,UnusedAttribute" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvOtpError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llOtp"
            android:layout_marginStart="@dimen/_7sdp"
            android:fontFamily="@font/roboto_light"
            android:text="Please enter OTP."
            android:textColor="@color/error_color"
            android:textSize="@dimen/_9ssp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llOtp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/roboto_regular"
            android:gravity="end"
            android:padding="@dimen/_5sdp"
            android:text="00:00"
            android:textSize="@dimen/_12ssp"
            android:visibility="gone" />

    </RelativeLayout>


</layout>